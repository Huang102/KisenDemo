<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:animator="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kisen.animationlayout.AnimatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            animator:anim_match_parent="true"
            android:text="1"
            android:gravity="center"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="30dp"
            android:text="@string/text"
            animator:anim_fromBgColor="@color/colorAccent"
            animator:anim_toBgColor="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="3"
            animator:anim_scaleX="true"
            android:gravity="center"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/app_name"
            animator:anim_scaleX="true"
            animator:anim_alpha="true"
            animator:anim_transform="fromLeft|fromTop"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            animator:anim_transform="fromRight|fromTop"
            animator:anim_scaleY="true"
            android:text="5"
            android:gravity="center"
            android:background="@color/colorAccent"
            animator:anim_alpha="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            animator:anim_transform="fromRight|fromBottom"
            animator:anim_alpha="true"
            android:text="6"
            android:gravity="center"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            animator:anim_transform="fromLeft|fromBottom"
            animator:anim_alpha="true"
            android:text="7"
            android:gravity="center"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="8"
            android:gravity="center"
            android:background="@color/colorPrimary" />

    </com.kisen.animationlayout.AnimatorLayout>

</RelativeLayout>
